<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:background="@drawable/aaa"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="uk.ac.kcl.www.raspberry_pi_irrigation_system.MainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.133"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/Today"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.333"
                android:background="@drawable/button_shape"
                android:clickable="false"
                android:drawableLeft="@drawable/alert"
                android:paddingLeft="2mm"
                android:paddingRight="2mm"
                android:text="˄  . . .\n˅  . . ."
                android:textSize="10.7sp" />

            <Button
                android:id="@+id/Tomorrow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.333"
                android:background="@drawable/button_shape"
                android:clickable="false"
                android:drawableLeft="@drawable/alert"
                android:paddingLeft="2mm"
                android:paddingRight="2mm"
                android:text="˄  . . .\n˅  . . ."
                android:textSize="10.7sp" />

            <Button
                android:id="@+id/AfterTomorrow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.333"
                android:background="@drawable/button_shape"
                android:clickable="false"
                android:drawableLeft="@drawable/alert"
                android:paddingLeft="2mm"
                android:paddingRight="2mm"
                android:text="˄  . . .\n˅  . . ."
                android:textSize="10.7sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="Choose automation method:"
                android:textAlignment="center"
                android:textColor="#2c3e50"
                android:textStyle="normal|bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.227"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.74"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/automaticBasedOnMoistureButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ripple_effect_button_shape"
                    android:clickable="false"
                    android:cropToPadding="false"
                    android:padding="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/moisturee" />

                <ImageButton
                    android:id="@+id/automaticBasedOnTemperatureButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ripple_effect_button_shape"
                    android:clickable="false"
                    android:padding="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/temperaturee" />

                <ImageButton
                    android:id="@+id/automaticBasedOnForecastButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ripple_effect_button_shape"
                    android:clickable="false"
                    android:padding="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/forecastt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.26"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonStop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect_button_shape_6"
                    android:text="STOP"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02"
            android:orientation="horizontal"></LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.37"
            android:weightSum="1">

            <!--<Button-->
            <!--android:paddingTop="10dp"-->
            <!--android:layout_height="0dp"-->
            <!--android:id="@+id/RefreshButtonMA"-->
            <!--android:layout_row="3"-->
            <!--android:layout_column="2"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_columnWeight="0.333"-->
            <!--android:layout_rowWeight="0.333"-->
            <!--android:background="@drawable/ripple_effect_button_shape_3"-->
            <!--android:scaleX="0.9"-->
            <!--android:scaleY="0.8"-->
            <!--android:textAllCaps="false"-->
            <!--android:text="Refresh"-->
            <!--android:drawablePadding="-5dp" />-->

            <ImageButton
                android:id="@+id/RefreshButtonMA"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="2"
                android:layout_columnWeight="0.333"
                android:layout_row="3"
                android:layout_rowWeight="0.333"
                android:adjustViewBounds="true"
                android:background="@drawable/ripple_effect_button_shape_3"
                android:clickable="false"
                android:cropToPadding="false"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/drawable_refresh" />

            <Button
                android:id="@+id/TempButtonMA"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_columnWeight="0.333"
                android:layout_row="2"
                android:layout_rowWeight="0.333"
                android:background="@drawable/button_shape_2"
                android:clickable="false"
                android:text="T: . . ."
                android:textSize="13sp" />

            <Button
                android:id="@+id/MoistButtonMA"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="2"
                android:layout_columnWeight="0.333"
                android:layout_row="2"
                android:layout_rowWeight="0.333"
                android:background="@drawable/button_shape_2"
                android:clickable="false"
                android:text="M: . . ."
                android:textSize="13sp" />

            <Button
                android:id="@+id/HumButtonMA"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="3"
                android:layout_columnWeight="0.333"
                android:layout_row="2"
                android:layout_rowWeight="0.333"
                android:background="@drawable/button_shape_2"
                android:clickable="false"
                android:text="H: . . ."
                android:textSize="13sp" />

            <!--<Button-->
            <!--android:paddingTop="10dp"-->
            <!--android:textAllCaps="false"-->
            <!--android:text="Graphs"-->
            android:id="@+id/mainActivityGraphs"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_width="0dp"
            android:layout_columnWeight="0.333"
            android:layout_rowWeight="0.333"
            <!--android:background="@drawable/ripple_effect_button_shape"-->
            android:scaleX="0.9"
            android:scaleY="0.8"
            <!--android:drawableTop="@drawable/drawable_graph"-->
            <!--android:drawablePadding="-5dp" />-->

            <ImageButton
                android:id="@+id/mainActivityGraphs"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="2"
                android:layout_columnWeight="0.333"
                android:layout_row="1"
                android:layout_rowWeight="0.333"
                android:adjustViewBounds="true"
                android:background="@drawable/ripple_effect_button_shape"
                android:cropToPadding="false"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/drawable_graph"
                 />

        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/manualIrrigationButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_button_shape"
                android:text="Manual irrigation"
                android:textAllCaps="false"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>
