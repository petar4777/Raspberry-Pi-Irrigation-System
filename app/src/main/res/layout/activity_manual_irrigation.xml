<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_manual_irrigation"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.ac.kcl.www.raspberry_pi_irrigation_system.ManualIrrigationActivity"
    android:background="@drawable/aaaaaaa"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05">


            <TextView
                android:text="Create custom irrigation plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="@drawable/background_transp"
            android:scaleX="0.958">

            <TextView
                android:text="Start at:"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/chooseTime"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/white" />

            <Spinner
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent"
                android:id="@+id/spinnerChooseTime"
                android:layout_weight="0.35"
                android:textAlignment="center" />

            <TextView
                android:text="for:"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/chooseHowLong"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/white" />

            <Spinner
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent"
                android:id="@+id/spinnerChooseHowLong"
                android:layout_weight="0.25"
                android:textAlignment="center" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

            <Button
                android:id="@+id/buttonAddToListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ripple_effect_button_shape"
                android:text="Add"
                android:textAllCaps="false"
                android:textSize="13sp" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45">

            <ListView
                android:background="@drawable/background_transp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/manualIrrigationListView"
                android:choiceMode="multipleChoice"
                android:focusable="true"
                android:scaleX="0.958" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

            <Button
                android:id="@+id/buttonUploadPlan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="0.25"
                android:background="@drawable/ripple_effect_button_shape"
                android:text="Upload"
                android:textAllCaps="false"
                android:textSize="13sp" />

            <Button
                android:id="@+id/buttonGetPrevious"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@drawable/ripple_effect_button_shape"
                android:text="Reload"
                android:textAllCaps="false"
                android:textSize="13sp" />


            <Button
                android:id="@+id/buttonDeleteSelection"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="0.25"
                android:background="@drawable/ripple_effect_button_shape"
                android:text="Delete"
                android:textAllCaps="false"
                android:textSize="13sp" />

            <Button
                android:id="@+id/buttonResetListView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="0.25"
                android:background="@drawable/ripple_effect_button_shape"
                android:text="Reset"
                android:textAllCaps="false"
                android:textSize="13sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

            <Button
                android:id="@+id/manualIrrigationActivityBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@drawable/ripple_effect_button_shape"
                android:text="Back"
                android:textAllCaps="false"
                android:textSize="13sp" />

        </RelativeLayout>

    </LinearLayout>